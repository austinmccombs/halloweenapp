<%= form_with(model: guest) do |form| %>
  <% if guest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

      <ul>
        <% guest.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :items, "Will you be bringing anything? (snacks, drinks, etc..)"%>
    <%= form.text_field :items %>
  </div>

  <div class="field">
    <%= form.label :playing_bp, 'Playing Beer Pong?'%>
    <%= form.check_box :playing_bp %>
  </div>

  <div class="actions">
    <%= form.submit 'Register ' %>
  </div>
<% end %>
